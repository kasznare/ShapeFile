<UserControl x:Class="DockingMap.CanvasShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DockingMap"
             mc:Ignorable="d">
    <Path 
        x:Name="path" 
        Data="{Binding Path=DisplayGeometry}" 
        Fill="{Binding Path=Fill, RelativeSource={RelativeSource FindAncestor, AncestorType=local:CanvasShape}}" 
        Stroke="{Binding Path=Stroke, RelativeSource={RelativeSource FindAncestor, AncestorType=local:CanvasShape}}"
        StrokeThickness="{Binding Path=StrokeThickness, RelativeSource={RelativeSource FindAncestor, AncestorType=local:CanvasShape}}"
        StrokeMiterLimit="1" 
        MouseLeftButtonDown="path_MouseLeftButtonDown" 
        MouseLeftButtonUp="path_MouseLeftButtonUp"
        MouseMove="path_MouseMove"/>
    <!--Fill="{Binding Path=Fill, RelativeSource={RelativeSource FindAncestor, AncestorType=local:CanvasShape}}" 
        Stroke="{Binding Path=Stroke, RelativeSource={RelativeSource FindAncestor, AncestorType=local:CanvasShape}}"
        StrokeThickness="{Binding Path=StrokeThickness, RelativeSource={RelativeSource FindAncestor, AncestorType=local:CanvasShape, AncestorLevel=1}}"-->
</UserControl>
